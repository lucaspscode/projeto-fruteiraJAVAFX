<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" maxWidth="Infinity" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projeto.controllers.admin.AdminController" styleClass="admin-root">
    <top>
        <Label text="Painel Administrativo - Pedidos" BorderPane.alignment="CENTER" styleClass="heading" wrapText="true" />
    </top>
    <center>
        <VBox fx:id="listaClientes" alignment="TOP_LEFT" spacing="10.0">
            <padding>
                <Insets top="15.0" left="15.0" right="15.0" bottom="15.0" />
            </padding>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button text="Voltar" onAction="#voltarParaOrigem" styleClass="btn btn-secondary" />
            </children>
            <padding>
                <Insets top="10.0" left="15.0" right="15.0" bottom="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
